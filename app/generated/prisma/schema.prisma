datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     Role
  exams    Exam[]   @relation("CreatedExams")
  answers  Answer[]
}

model Exam {
  id          Int        @id @default(autoincrement())
  title       String
  subject     String
  description String?
  createdBy   User       @relation("CreatedExams", fields: [createdById], references: [id])
  createdById Int
  questions   Question[]
  startTime   DateTime
  endTime     DateTime
}

model Question {
  id        Int          @id @default(autoincrement())
  exam      Exam         @relation(fields: [examId], references: [id])
  examId    Int
  type      QuestionType
  content   String
  imageUrl  String?
  options   String? // JSON string for MCQ
  answerKey String?
  Answer    Answer[]
}

model Answer {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  question   Question @relation(fields: [questionId], references: [id])
  questionId Int
  answer     String
  score      Int?
}

enum Role {
  ADMIN
  GURU
  SISWA
}

enum QuestionType {
  PILIHAN_GANDA
  ESAI
}
